<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="4dp"
  android:layout_marginBottom="8dp"
  android:layout_marginTop="8dp"
  android:layout_marginStart="16dp"
  android:layout_marginLeft="16dp"
  android:layout_marginEnd="16dp"
  android:layout_marginRight="16dp">
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:id="@+id/list_item_card_money_panel">
    <TextView
      android:id="@+id/list_item_card_balance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAlignment="viewEnd"
      android:layout_gravity="end"
      tools:text="账户余额" />
    <TextView
      tools:text="剩余额度"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/list_item_card_remain"
      android:textAlignment="textEnd"
      android:layout_gravity="end" />
  </LinearLayout>
  <TextView
    android:id="@+id/list_item_account_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:text="账户名字" />
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/list_item_account_name"
    android:layout_toLeftOf="@id/list_item_card_money_panel"
    android:layout_toStartOf="@id/list_item_card_money_panel">
    <TextView
      android:id="@+id/list_item_card_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      tools:text="账户类型" />
    <TextView
      android:id="@+id/list_item_card_number"
      android:layout_marginLeft="4sp"
      android:layout_marginStart="4sp"
      tools:text="卡号"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
