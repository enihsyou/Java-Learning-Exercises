    package="com.enihsyou.shane.bankapp">

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="layout.AccountActivity"
            android:label="@string/account_create">
        </activity>

        <activity
            android:name="layout.AccountListActivity"
            android:label="@string/account_list">

        </activity>
        <activity
            android:name="layout.CardActivity"
            android:label="@string/card_create">
        </activity>
        <activity
            android:name="layout.CardListActivity"
            android:label="@string/card_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        </application>

</manifest>
