<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.enihsyou.shane.bankapp">
    <application
      android:allowBackup="true"
      android:fullBackupContent="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
        <!--账户部分-->
      <activity
        android:name="layout.AccountListActivity"
        android:label="@string/account_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
          android:name="layout.AccountCreateActivity"
          android:label="@string/create_new_account">
        </activity>

      <!--卡片部分-->
      <activity
        android:label="@string/card_list"
        android:name="layout.CardListActivity">
        </activity>
        <activity
          android:name="layout.CardCreateActivity"
          android:label="@string/create_new_card">
        </activity>
<activity android:name="layout.DetailActivity" />
      </application>
</manifest>
